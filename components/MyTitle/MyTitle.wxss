/* components/MyTitle/MyTitle.wxss */
.my_title{
	display: flex;
	align-items: center;
	padding: 10rpx;
	background-color: #fff;
}
.logo{
	flex: 7;
	margin-left: 20rpx;
	
}
.logo_img{
		opacity: 0.6;
}
.search_icon{
	flex: 1;
	display: flex;
	justify-content: center;
	align-items: center;
}
.user_icon{
	flex: 2;
	display: flex;
	justify-content: center;
	align-items: center;
}
.down_app{
	flex: 3;
	font-size: 28rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	background-color: pink;
	color: #fff;
	border-radius: 15rpx;
	padding: 10rpx 0rpx;
}

