/*-----全局样式-----*/
page{
	color: #F583A5;
	padding: 0 10rpx;
}

/*-----导航栏-----*/
.nav_wrap{
	
}
.nav{
	white-space: nowrap;
	padding: 5rpx 0;
}
.nav_item{
	padding: 20rpx 45rpx;
	font-size: 30rpx;
	display: inline-block;
}
.active{
	border-bottom:2px solid #F583A5;
}
/*-----轮播图-----*/
.slides{
	/* padding: 0 6rpx; */
	margin-top: 6rpx;
}
swiper{
	width: 100%;
	height: 230rpx;
}
swiper image{
	width: 100%;
}

/*-----视频列表-----*/
.video-wrap{
	display: flex;
	flex-wrap: wrap;
	/* padding: 5rpx; */
	justify-content: space-between;
}
.video_item{
	width:49%;
	margin-bottom: 16rpx;
}
.video_img{
	position: relative;
}
.video_img image{
	width:100%;
	border-radius: 14rpx;
}
.video_info text[class*="fa"]{
	margin-right: 6rpx;
}
      /*播放量与评论量 */
.video_img .video_info{
	position:absolute;
	bottom:10rpx;
	left: 0;
	padding: 0 10rpx;
	width: 100%;
	color: #fff;
	display: flex;
	justify-content: space-between;
	font-size: 27rpx;
}
.video_title{
	font-size: 27rpx;
	
	display: -webkit-box;
	overflow: hidden;
	white-space: normal;
	text-overflow: ellipsis;
	word-wrap: break-word;
	-webkit-line-clamp:2;
	-webkit-box-orient:vertical;
	color: #000;
}